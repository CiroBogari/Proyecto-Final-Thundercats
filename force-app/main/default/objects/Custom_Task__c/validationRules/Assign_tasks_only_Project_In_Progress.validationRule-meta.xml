<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Assign_tasks_only_Project_In_Progress</fullName>
    <active>true</active>
    <errorConditionFormula>OR(ISPICKVAL(Resource_Project__r.Project__r.Status__c,&apos;Pre-Kickoff&apos;),ISPICKVAL(Resource_Project__r.Project__r.Status__c,&apos;Completed&apos; ))</errorConditionFormula>
